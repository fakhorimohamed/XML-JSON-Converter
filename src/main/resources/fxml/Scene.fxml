<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.String?>
<?import javafx.collections.FXCollections?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.control.ToggleButton?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<VBox alignment="CENTER" prefHeight="480.0" prefWidth="640.0" style="-fx-background-color: #1e1e1e;" xmlns="http://javafx.com/javafx/25" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.mycompany.xmljson_converter.SceneController">
   <children>
      <HBox alignment="CENTER" spacing="10.0" style="-fx-background-color: #2d2d39;">
         <padding>
            <Insets bottom="15.0" left="15.0" right="15.0" top="15.0" />
         </padding>
         <children>
            <Button fx:id="uploadBtn" style="-fx-background-color: #4b4b5e; -fx-text-fill: white; -fx-background-radius: 5;" text="Upload File" />
            <Button fx:id="clearXmlBtn" style="-fx-background-color: #4b4b5e; -fx-text-fill: white; -fx-background-radius: 5;" text="Clear" />
            <ComboBox fx:id="spaceCombo" promptText="Space" style="-fx-background-color: #8499b7; -fx-text-fill: white; -fx-background-radius: 5; -fx-mark-color: white;">
                <items>
                    <FXCollections fx:factory="observableArrayList">
                        <String fx:value="2_Space" />
                        <String fx:value="4_Space" />
                        <String fx:value="6_Space" />
                    </FXCollections>
                </items>
            </ComboBox>
            <Button fx:id="clearJsonBtn" layoutX="148.0" layoutY="25.0" style="-fx-background-color: #4b4b5e; -fx-text-fill: white; -fx-background-radius: 5;" text="Clear" />
            <Button fx:id="copyBtn" style="-fx-background-color: #4b4b5e; -fx-text-fill: white; -fx-background-radius: 5;" text="Copy" />
            <Button fx:id="downloadBtn" style="-fx-background-color: #4b4b5e; -fx-text-fill: white; -fx-background-radius: 5;" text="Download" />
         </children>
      </HBox>

      <HBox alignment="CENTER" spacing="15.0" style="-fx-background-color: #8499b7;" VBox.vgrow="ALWAYS">
         <padding>
            <Insets bottom="15.0" left="15.0" right="15.0" top="15.0" />
         </padding>
         <children>
            
            <VBox spacing="5.0" HBox.hgrow="ALWAYS">
               <children>
                  <Button fx:id="Xml_JSonBtn" contentDisplay="CENTER" style="-fx-background-color: #4992ff; -fx-text-fill: black; -fx-background-radius: 5;" text="Xml --&gt; Json" textFill="#4992ff" textOverrun="CENTER_WORD_ELLIPSIS">
                     <font>
                        <Font size="14.0" />
                     </font>
                  </Button>
                  <TextArea promptText="Enter XML File..." style="-fx-control-inner-background: #fdf6e3; -fx-prompt-text-fill: gray;" VBox.vgrow="ALWAYS" fx:id="xmlInput_Output" />
               </children>
            </VBox>

            <VBox spacing="5.0" HBox.hgrow="ALWAYS">
               <children>
                  <Button fx:id="JSON_XMLBtn" contentDisplay="CENTER" style="-fx-background-color: #4992ff; -fx-text-fill: black; -fx-background-radius: 5;" text="Xml&lt;---Json" textFill="#4992ff" textOverrun="CENTER_WORD_ELLIPSIS">
                     <font>
                        <Font size="14.0" />
                     </font>
                  </Button>
                  <TextArea fx:id="jsonOutput_Input" promptText="Converted JSON File..." style="-fx-control-inner-background: #fdf6e3; -fx-prompt-text-fill: gray;" VBox.vgrow="ALWAYS" />
               </children>
            </VBox>
         </children>
      </HBox>
   </children>
</VBox>
